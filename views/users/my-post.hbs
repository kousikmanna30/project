<main>
    <div class="container-fluid px-4" id="sss">
        <h2 class="mt-4">Posted Work List</h2>
        {{!-- <div class="search">

            <lable style="color: teal;font-size: 25px"> Search hear :- </lable>
            <input type="text" name="" id="myInput" placeholder="search hear..." onkeyup="searchFun()">

        </div> --}}
        <div class="card mb-5">
            <div class="card-body">
                <table class="table table-striped" id="myTable">
                    <thead>
                        <tr class="table-active">
                            <th>Sl No</th>
                            <th>Work Name</th>
                            <th>Work Type</th>
                            <th>Work Location</th>
                            <th>Alloted Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{work_name}}</td>
                            <td>{{work_type}} </td>
                            <td width="10%">{{work_location}}</td>
                            <td width="3%">{{work_amount}}</td>
                            <td width="2%">
                                <a class="btn btn-success" href="/users/selected-my-post?id={{id}}">Details</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>


<style>
    body {
        background-color: #00FFFF;
    }

    #sss {
        width: 90%;
    }

    h2 {
        text-align: center;
        padding-top: 30px;
    }
</style>


